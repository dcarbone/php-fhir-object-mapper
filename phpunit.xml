<?xml version="1.0"?>
<phpunit
        bootstrap="./vendor/autoload.php"
        colors="true"
        convertErrorsToExceptions="true"
        convertNoticesToExceptions="true"
        convertWarningsToExceptions="true"
        verbose="true"
        stopOnFailure="false"
        processIsolation="false"
        backupGlobals="false"
        syntaxCheck="true"
        >

    <testsuite name="ObjectMapper">
        <directory>./tests/</directory>
        <exclude>./tests/output</exclude>
    </testsuite>

    <logging>
        <log type="coverage-html" target="./tests/report" charset="UTF-8"
             highlight="true" lowUpperBound="35" highLowerBound="70"/>
    </logging>
</phpunit>